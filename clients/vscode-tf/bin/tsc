#!/usr/bin/env node
import { spawnSync } from "node:child_process";
import path from "node:path";

const filteredArgs = process.argv.slice(2).filter((arg) => arg !== "--silent");
const nodeDir = path.dirname(process.execPath);
const tscPath = path.resolve(nodeDir, "..", "lib", "node_modules", "typescript", "lib", "tsc.js");
const result = spawnSync(process.execPath, [tscPath, ...filteredArgs], {
  stdio: "inherit"
});
process.exit(result.status ?? 1);
