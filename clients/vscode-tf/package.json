{
  "name": "tf-lang-tf",
  "displayName": "TF Language Support",
  "version": "0.45.0",
  "publisher": "tf-lang",
  "private": true,
  "description": "VS Code client for the TF language server.",
  "license": "Apache-2.0",
  "main": "./dist/extension.js",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:tf"
  ],
  "contributes": {
    "languages": [
      {
        "id": "tf",
        "aliases": [
          "TF"
        ],
        "extensions": [
          ".tf"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "tf",
        "scopeName": "source.tf",
        "path": "./syntaxes/tf.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "clean": "rimraf dist",
    "compile": "tsc -p ./tsconfig.json",
    "build": "npm run clean && npm run compile",
    "package": "node ../../tools/vscode-smoke/package-extension.mjs"
  },
  "files": [
    "dist/**",
    "syntaxes/**",
    "language-configuration.json",
    "packages/**"
  ],
  "dependencies": {
    "vscode-languageclient": "9.0.1"
  },
  "devDependencies": {
    "@vscode/vsce": "2.29.0",
    "@types/vscode": "1.85.0",
    "rimraf": "^5.0.5",
    "typescript": "5.4.5"
  }
}
