{
  "name": "@tf-lang/clients-vscode-tf",
  "displayName": "TF Language Basics",
  "description": "TF language integration with the TF language server.",
  "version": "0.0.1",
  "publisher": "tf-lang",
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:tf",
    "onCommand:tf.showTraceSource"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "tf",
        "aliases": ["TF", "tf"],
        "extensions": [".tf", ".tfvars"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "tf",
        "scopeName": "source.tf",
        "path": "./syntaxes/tf.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "tf.showTraceSource",
        "title": "TF: Show Trace Source"
      }
    ]
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsc -p tsconfig.json",
    "dev": "tsc -w -p tsconfig.json"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "@types/vscode": "^1.85.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.9.0"
  },
  "files": [
    "dist",
    "syntaxes",
    "language-configuration.json",
    "package.json",
    "README.md"
  ]
}
