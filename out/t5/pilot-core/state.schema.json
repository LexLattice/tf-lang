{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://tf-lang.dev/schemas/pilot/state.schema.json",
  "title": "PilotState",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "seed": { "type": "integer" },
    "positions": {
      "type": "object",
      "additionalProperties": { "$ref": "#/definitions/decimal" }
    },
    "balances": {
      "type": "object",
      "additionalProperties": { "$ref": "#/definitions/decimal" }
    },
    "meta": {
      "type": "object",
      "additionalProperties": true
    }
  },
  "required": ["seed", "positions", "balances"],
  "definitions": {
    "decimal": {
      "type": "string",
      "pattern": "^-?\\d+(?:\\.\\d+)?$"
    }
  }
}
