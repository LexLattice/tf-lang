{
  "name": "tf-lang",
  "version": "0.1.0",
  "private": true,
  "description": "Monorepo for TF-Lang L0 runtimes (TypeScript + Rust)",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "build": "pnpm -r --filter ./packages/* run build || true",
    "test": "pnpm -r --filter ./packages/* run test || true",
    "golden": "bash scripts/golden.sh",
    "hooks:enable": "git config core.hooksPath .githooks",
    "docs:serve": "python -m http.server 8080 -d docs"
  }
}