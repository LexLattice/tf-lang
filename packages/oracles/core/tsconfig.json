{
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "strict": true,
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "tests/**/*.ts"],
  "exclude": ["dist"]
}
