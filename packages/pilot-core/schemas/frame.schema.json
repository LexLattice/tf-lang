{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://tf-lang.dev/schemas/pilot/frame.json",
  "title": "PilotFrame",
  "type": "object",
  "additionalProperties": false,
  "required": ["ts", "sym", "seq", "bid", "ask", "last", "volume"],
  "properties": {
    "ts": { "type": "integer", "minimum": 0 },
    "sym": { "type": "string", "minLength": 1 },
    "seq": { "type": "integer", "minimum": 0 },
    "bid": { "type": "string", "pattern": "^-?\\d+(?:\\.\\d+)?$" },
    "ask": { "type": "string", "pattern": "^-?\\d+(?:\\.\\d+)?$" },
    "last": { "type": "string", "pattern": "^-?\\d+(?:\\.\\d+)?$" },
    "volume": { "type": "string", "pattern": "^-?\\d+(?:\\.\\d+)?$" },
    "meta": { "type": "object", "additionalProperties": true }
  }
}
