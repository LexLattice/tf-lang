{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://tf-lang.dev/schemas/pilot/state.json",
  "title": "PilotState",
  "type": "object",
  "additionalProperties": false,
  "required": ["seed", "cash", "positions"],
  "properties": {
    "seed": { "type": "integer" },
    "cash": { "type": "string", "pattern": "^-?\\d+(?:\\.\\d+)?$" },
    "positions": {
      "type": "object",
      "additionalProperties": { "type": "string", "pattern": "^-?\\d+(?:\\.\\d+)?$" }
    },
    "meta": { "type": "object", "additionalProperties": true }
  }
}
