{
  "name": "tf-lang-l0",
  "version": "0.1.1",
  "description": "TF-Lang L0: minimal deterministic kernel (VM + checker + model) in TypeScript",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "exports": {
    ".": "./dist/index.js"
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "prepare": "pnpm run build",
    "build": "tsc -p tsconfig.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "vectors": "tsx scripts/run-vectors.ts",
    "prepublishOnly": "pnpm run build",
    "pretrace:smoke": "pnpm run build",
    "trace:smoke": "node ./dist/smoke-trace.js"
  },
  "dependencies": {
    "@noble/hashes": "^2.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.3.1",
    "tsx": "^4.20.5",
    "typescript": "^5.5.0",
    "vitest": "^2.0.5"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LexLattice/tf-lang.git",
    "directory": "packages/tf-lang-l0-ts"
  },
  "homepage": "https://github.com/LexLattice/tf-lang#readme",
  "bugs": {
    "url": "https://github.com/LexLattice/tf-lang/issues"
  }
}
