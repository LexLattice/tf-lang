{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true
  },
  // include the ambient declarations so NodeNext sees our .mjs shims
  "include": ["src/**/*"],
  "typeRoots": ["./src/types", "./src", "./node_modules/@types"],
  "files": ["src/shims.d.ts"],
  "exclude": ["dist"]
}
