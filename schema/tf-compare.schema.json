{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "tf-plan-compare",
  "type": "object",
  "additionalProperties": false,
  "required": ["meta", "branches", "recommendation"],
  "definitions": {
    "branch": {
      "type": "object",
      "additionalProperties": false,
      "required": ["nodeId", "rank", "score", "oracles", "summary"],
      "properties": {
        "nodeId": { "type": "string" },
        "rank": { "type": "integer", "minimum": 1 },
        "score": {
          "type": "object",
          "additionalProperties": false,
          "required": ["aggregate", "normalized"],
          "properties": {
            "aggregate": { "type": "number" },
            "normalized": {
              "type": "object",
              "additionalProperties": { "type": "number" }
            }
          }
        },
        "oracles": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "additionalProperties": false,
            "required": ["status"],
            "properties": {
              "status": { "type": "string", "enum": ["pass", "fail", "unknown"] },
              "details": { "type": "string" },
              "artifact": { "type": "string" }
            }
          }
        },
        "summary": { "type": "string" },
        "links": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["label", "url"],
            "properties": {
              "label": { "type": "string" },
              "url": { "type": "string" }
            }
          }
        }
      }
    }
  },
  "properties": {
    "meta": {
      "type": "object",
      "additionalProperties": false,
      "required": ["version", "planHash", "inputsHash", "generatedAt"],
      "properties": {
        "version": { "type": "string" },
        "planHash": { "type": "string" },
        "inputsHash": { "type": "string" },
        "generatedAt": { "type": "string" }
      }
    },
    "branches": {
      "type": "array",
      "items": { "$ref": "#/definitions/branch" }
    },
    "recommendation": {
      "type": "object",
      "additionalProperties": false,
      "required": ["nodeId", "reason"],
      "properties": {
        "nodeId": { "type": "string" },
        "reason": { "type": "string" }
      }
    }
  }
}
