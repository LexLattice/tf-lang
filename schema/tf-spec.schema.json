{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Trustfall Spec Schema",
  "description": "A schema for Trustfall specifications (tf-spec).",
  "type": "object",
  "properties": {
    "version": {
      "description": "The version of the tf-spec schema.",
      "type": "string",
      "enum": ["0.1"]
    },
    "id": {
      "description": "A unique identifier for this spec.",
      "type": "string"
    },
    "root": {
      "description": "The root operation of the spec.",
      "$ref": "#/definitions/op"
    }
  },
  "required": ["version", "id", "root"],
  "definitions": {
    "op": {
      "type": "object",
      "properties": {
        "op": {
          "description": "The operation to perform.",
          "type": "string"
        },
        "args": {
          "description": "The arguments for the operation.",
          "type": "array",
          "items": {
            "$ref": "#/definitions/op"
          }
        },
        "value": {
          "description": "A literal value."
        }
      },
      "required": ["op"]
    }
  }
}
